<ul>
<% @tasks.each do |task|%>
  <li>
    <%=link_to task.title, task_path(task.id)%>
    (<%=link_to "edit", edit_task_path(task.id)%>)
    (<%=link_to "delete", task_path(task.id), data: {turbo_method: :delete, turbo_confirmation: "Estas seguro/a que quieres borrar este registro?"}%>)
  </li>
<% end %>
</ul>
